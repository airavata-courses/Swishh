pipeline {
    agent any
    triggers {
        pollSCM '* * * * *'
    }
	
    stages {
		stage('Build App')
          {
            steps
             {
             sh "env"
              git branch: 'feature/jenkins', url: 'https://github.com/airavata-courses/Swishh.git'
		     sh """ 
		     cd $WORKSPACE/ImageStorage/
		     """
		     script {
                  def pom = readMavenPom file: '$WORKSPACE/ImageStorage/pom.xml'
                  version = pom.version
              }
              sh "mvn install -DskipTests=true"
            }
          }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn install'
            }
        }
    }
}
